<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="italic"
        android:gravity="center"
        android:text="Please make sure the values exceed 0.000001"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height='wrap_content'
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height='wrap_content'
            android:hint="Enter the mass of the first object"
            android:inputType="numberDecimal"
            android:digits="0123456789Ee-."
            android:layout_weight="1"
            android:id='@+id/m1'/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height='wrap_content'
            android:hint="Enter the mass of the second object"
            android:inputType="numberDecimal"
            android:digits="0123456789Ee-."
            android:layout_weight="1"
            android:id='@+id/m2'/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height='wrap_content'
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the distance between the center of two bodies"
            android:inputType="numberDecimal"
            android:digits="0123456789Ee-."
            android:id='@+id/r'/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate the gravitational force"
            android:id='@+id/btn'/>
    </LinearLayout>
